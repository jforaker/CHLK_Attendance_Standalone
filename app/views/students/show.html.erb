
<div class="">
  <h1><%= @student.name %></h1>

</div>



<div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
  <div class="well profile">
    <div class="col-sm-12">
      <div class="col-xs-12 col-sm-8">
        <h1><%= @student.name %></h1>
        <p><strong>About: </strong> <%= @student.note %> </p>

        <br />
      </div>
      <div class="col-xs-12 col-sm-4 text-center">
        <figure>
          <div class="img-circle img-responsive">
            <i class="fa fa-user icon"></i>
          </div>
        </figure>
      </div>
    </div>
    <div class="col-xs-12 divider text-center">


      <div class="col-xs-12 col-sm-6 emphasis">
        <div class="btn-group dropup btn-block">
          <button type="button" class="btn btn-primary opts"><span class="fa fa-gear"></span> Options </button>
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span>
            <span class="sr-only">Toggle Dropdown</span>
          </button>
          <ul class="dropdown-menu text-left" role="menu">

            <li>
              <%= link_to edit_section_student_path(:section_id => @student.section_id, :id => @student.id) do %>
                  Edit
                  <span class="fa fa-pencil-square-o pull-right"></span>
              <% end %>
            </li>
          </ul>

        </div>

      </div>
    </div>
  </div>
</div>